<!DOCTYPE html>
<html lang="en">

<head>
    {{> head title="Orders" }}
    <!-- Custom CSS -->
    <link rel="stylesheet" href="../../css/index.css">
</head>

<body>
    {{> navbar}}
    <main>
        <div class="container">
            <div class="row my-5">
                <div class="col-md-12">
                    <h1 class="text-center">Details</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        {{#if data}}
                        <table class="table table-borderless table-hover text-center">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Imagen</th>
                                    <th scope="col">Producto</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Subtotal</th>
                                    <th scope="col">IVA</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each data}}
                                <tr>
                                    <th scope="row">{{id}}</th>
                                    <td><img src="data:image/jpeg;base64,{{image}}" alt="{{name}}" class="img-fluid" width="100"></td>
                                    <td>{{name}}</td>
                                    <td>{{quantity}}</td>
                                    <td>$ {{price}}</td>
                                    <td>$ {{subtotal}}</td>
                                    <td>$ {{iva}}</td>
                                    <td>$ {{total}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </main>
    {{> footer}}
    {{> scripts}}
</body>

</html>