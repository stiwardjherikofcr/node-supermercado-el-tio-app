<!DOCTYPE html>
<html lang="en">

<head>
    {{> head title="Cart"}}
    <!-- Custom CSS -->
    <link rel="stylesheet" href="../../css/index.css">
</head>

<body onload="getCart()">
    {{> navbar}}
    <main>
        <div class="container" id="cart">
            <div class="row my-5">
                <div class="col-md-12">
                    <h1 class="text-center">Carrito de Compras</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="table-responsive">
                        <table class="table table-borderless table-hover text-center">
                            <thead>
                                <tr>
                                    <th scope="col">Imagen</th>
                                    <th scope="col">Producto</th>
                                    <th scope="col">Cantidad</th>
                                    <th scope="col">Precio</th>
                                    <th scope="col">Total</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody id="products"></tbody>
                        </table>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header text-center">
                            <h5 class="card-title">Resumen</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <p class="card-text">
                                        <span>Subtotal:</span>
                                        <span class="float-right font-weight-bold" id="subtotal"></span>
                                    </p>
                                    <p class="card-text">
                                        <span id="tax"></span>
                                        <span class="float-right" id="iva"></span>
                                    </p>
                                    <p class="card-text">
                                        <span class="h5">Total:</span>
                                        <span class="float-right h5" id="total_price"></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-lg btn-block" onclick="checkout()" style="color: #fff; background-color:#042577;">Pagar</button>
                            <a href="/products/products_list" class="btn btn-outline-primary btn-lg btn-block">Seguir Comprando</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    {{> footer}}
    {{> scripts}}
</body>

</html>